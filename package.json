{
  "name": "keyfront-bff",
  "version": "0.1.0",
  "description": "Backend-for-Frontend Gateway for Keycloak Authentication & Authorization",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "benchmark": "k6 run benchmarks/scripts/k6-load-test.js",
    "benchmark:smoke": "k6 run --env BENCHMARK_TYPE=smoke benchmarks/scripts/k6-load-test.js",
    "benchmark:load": "k6 run --env BENCHMARK_TYPE=load benchmarks/scripts/k6-load-test.js",
    "benchmark:stress": "k6 run --env BENCHMARK_TYPE=stress benchmarks/scripts/k6-load-test.js",
    "benchmark:spike": "k6 run --env BENCHMARK_TYPE=spike benchmarks/scripts/k6-load-test.js",
    "benchmark:soak": "k6 run --env BENCHMARK_TYPE=soak benchmarks/scripts/k6-load-test.js",
    "benchmark:auth": "k6 run --env BENCHMARK_TYPE=load --env FOCUS_SCENARIO=auth benchmarks/scripts/k6-load-test.js",
    "benchmark:gateway": "k6 run --env BENCHMARK_TYPE=load --env FOCUS_SCENARIO=gateway benchmarks/scripts/k6-load-test.js",
    "benchmark:session": "k6 run --env BENCHMARK_TYPE=load --env FOCUS_SCENARIO=session benchmarks/scripts/k6-load-test.js",
    "benchmark:ratelimit": "k6 run --env BENCHMARK_TYPE=stress --env FOCUS_SCENARIO=ratelimit benchmarks/scripts/k6-load-test.js",
    "benchmark:diagnose": "k6 run --env BENCHMARK_TYPE=smoke --summary-export=benchmarks/results/diagnostic-$(date +%Y%m%d-%H%M).json benchmarks/scripts/k6-load-test.js",
    "benchmark:memory": "k6 run --env BENCHMARK_TYPE=load --env MEMORY_PROFILE=true benchmarks/scripts/k6-load-test.js",
    "benchmark:suite": "node benchmarks/scripts/benchmark-runner.js",
    "benchmark:report": "open benchmarks/results/benchmark-report.html || xdg-open benchmarks/results/benchmark-report.html",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cookies-next": "^4.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "isomorphic-dompurify": "^2.7.0",
    "jose": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.0",
    "openid-client": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.8",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-extended": "^6.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "keycloak",
    "oidc",
    "oauth2",
    "bff",
    "authentication",
    "authorization",
    "gateway"
  ],
  "author": "Keyfront Team",
  "license": "MIT"
}
